{% extends "layout/layout" %}

{% block beforeMain %}
    {% include 'layout/id_check_banner.twig' with details_data %}
{% endblock %}

{% block content %}
    <h1 class="govuk-heading-xl moj-hidden">{% block title %}Identity check cannot be completed over the phone
        {% endblock %}</h1>
    <div class="moj-banner moj-banner--warning" role="region" aria-label="Warning">
        <svg class="moj-banner__icon" fill="currentColor" role="presentation" focusable="false"
                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 25" height="25" width="25">
            <path d="M13.6,15.4h-2.3v-4.5h2.3V15.4z M13.6,19.8h-2.3v-2.2h2.3V19.8z M0,23.2h25L12.5,2L0,23.2z"/>
        </svg>
        <div class="moj-banner__message">Not enough details to continue with this form of identification</div>
    </div>
    <div class="govuk-form-group">
        <p class="govuk-body govuk-!-width-two-thirds">
            Sorry, although the identity details did match, in this case we cannot complete an identity check over the phone.
        </p>
        <p class="govuk-body govuk-!-width-two-thirds">
            {{ fraud_message }}
        </p>
    </div>
    <div class="govuk-form-group">
        <a
                href="./how-will-donor-confirm"
                role="button"
                draggable="false"
                class="govuk-button moj-button-menu__item govuk-button "
                data-module="govuk-button"
        >
            Try a different method
        </a>
    </div>
{% endblock %}
