<div class="govuk-width-container">
    <main class="govuk-main-wrapper">
        <form method="POST">
            <h1 class="govuk-heading-xl">How will the donor confirm their identity</h1>

            <h2 class="govuk-heading-m">ID over the phone (preferred)</h2>
            <div class="govuk-form-group">
                <div class="govuk-radios" data-module="govuk-radios">
                    {% for datum in options_data %}
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="{{ datum }}" name="id_method" type="radio"
                                   value="{{ datum }}">
                            <label class="govuk-label govuk-radios__label" for="{{ datum }}">{{ datum }}</label>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="govuk-form-group">
                <h2 class="govuk-heading-m">ID in person at the Post Office (if unable to ID over the phone)</h2>


                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="whereDoYouLive" name="id_method" type="radio"
                           value="england">
                    <label class="govuk-label govuk-radios__label" for="whereDoYouLive">
                        Post Office (current UK / EU international passport or UK driving licence)
                    </label>
                </div>
            </div>
            <div class="govuk-form-group">
                <h2 class="govuk-heading-m">No ID, choose a person to vouch</h2>

                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="whereDoYouLive" name="id_method" type="radio"
                           value="england">
                    <label class="govuk-label govuk-radios__label" for="whereDoYouLive">
                        Choose someone to prove their identity on the donor's behalf
                    </label>
                </div>
            </div>
            <div class="govuk-form-group">
                <h2 class="govuk-heading-m">Court of protection</h2>

                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="whereDoYouLive" name="id_method" type="radio"
                           value="england">
                    <label class="govuk-label govuk-radios__label" for="whereDoYouLive">
                        Court of protection
                    </label>
                </div>
            </div>
            <button class="govuk-button">Continue</button>
        </form>
    </main>
</div>
