{% extends "layout/layout" %}
{% block content %}
{% include 'layout/id_check_banner.twig' with details_data %}
<div class="govuk-width-container govuk-!-padding-top-5">
    <h1 class="govuk-heading-xl moj-hidden">{% block title %}UK passport{% endblock %}</h1>
        <div class="moj-banner moj-banner--warning" role="region" aria-label="Warning">
            <svg class="moj-banner__icon" fill="currentColor" role="presentation" focusable="false"
                 xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 25" height="25" width="25">
                <path d="M13.6,15.4h-2.3v-4.5h2.3V15.4z M13.6,19.8h-2.3v-2.2h2.3V19.8z M0,23.2h25L12.5,2L0,23.2z"/>
            </svg>
            <div class="moj-banner__message">Unable to verify passport details. Check again or try a different method.</div>
        </div>
        <h2 class="govuk-heading-m">Name on passport</h2>
        <p class="govuk-body">
            {{ details_data.firstName }} {{ details_data.lastName }}
        </p>
        <h2 class="govuk-heading-m">Date of birth</h2>
        <p class="govuk-body">
            {{ dob_full }}
        </p>
        <h2 class="govuk-heading-m">Passport number</h2>
        <p class="govuk-body">
            {{ passport }}
        </p>
        <h2 class="govuk-heading-m">Passport in date (max 5 years out of date)</h2>
        <p class="govuk-body">
            {{ passport_indate }}
        </p>
        <a href="./passport-number" class="govuk-button">Edit details</a>
{#        <p class="govuk-body">#}
            <a href="./how-will-donor-confirm" role="button" draggable="false"
               class="govuk-button moj-button-menu__item govuk-button--secondary govuk-!-static-margin-left-2" data-module="govuk-button">
                Try a different method
            </a>
{#        </p>#}

</div>
{% endblock %}
