<div class="moj-identity-bar">
    <div class="moj-identity-bar__container">
        <div class="moj-identity-bar__details">
            <span class="moj-identity-bar__title">Identity Check: <b>{{ details_data.firstName }} {{ details_data.lastName }}</b></span>
        </div>
        <div class="moj-identity-bar__actions">
            <div class="moj-identity-bar__menu">
                <div class="moj-button-menu">
                    <div class="moj-button-menu__wrapper">
                        <a href="#"
                           role="button"
                           draggable="false"
                           class="govuk-button moj-button-menu__item govuk-button--secondary "
                           data-module="govuk-button"
                        >
                            Exit ID Check
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="govuk-width-container">
    <main class="govuk-main-wrapper">
        <h1 class="govuk-heading-xl">Start</h1>

        <h3 class="govuk-heading-m">Begin identity verification process for {{ type }}</h3>

        <div class="govuk-form-group">
            <fieldset class="govuk-fieldset" aria-describedby="waste-hint">
                <div class="govuk-summary-card">
                    <div class="govuk-summary-card__title-wrapper">
                        <h2 class="govuk-summary-card__title">
                            LPA List
                        </h2>
                    </div>
                    <div class="govuk-summary-card__content">
                        <dl class="govuk-summary-list">
                            <div class="govuk-summary-list__row">
                                <dt class="govuk-summary-list__key">
                                    LPA reference number
                                </dt>
                                <dt class="govuk-summary-list__key">
                                    Donor
                                </dt>
                                <dt class="govuk-summary-list__key">
                                    Action
                                </dt>
                            </div>
                            {% for datum in lpaUids %}
                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        <label class="govuk-label govuk-checkboxes__label" for="lpa_check_{{ datum }}">
                                            {{ datum }}
                                        </label>
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        {{ details['FirstName'] }} {{ details['LastName'] }}
                                    </dd>
                                    <dd class="govuk-summary-list__value">
                                        <a href="">Remove</a>
                                    </dd>
                                </div>
                            {% endfor %}
                        </dl>
                    </div>
                </div>
            </fieldset>
        </div>
        <a href="./{{ case }}/how-will-donor-confirm" class="govuk-button">Open case and continue</a>
    </main>
</div>
