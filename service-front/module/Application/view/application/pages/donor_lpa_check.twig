{% include 'layout/id_check_banner.twig' with details_data %}
<div class="govuk-width-container govuk-!-padding-top-5">
    <form method="POST">
        <h1 class="govuk-heading-xl">Donor LPA check</h1>
        <h3 class="govuk-heading-m">Which LPAs should this identity check apply to?</h3>

        <div class="govuk-form-group govuk-!-width-three-quarters">
            <fieldset class="govuk-fieldset">
                <div class="govuk-summary-card">
                    <div class="govuk-summary-card__title-wrapper">
                        <h2 class="govuk-summary-card__title">
                            LPAs for donor: {{ details_data.firstName }} {{ details_data.lastName }}
                        </h2>
                    </div>
                    <div class="govuk-summary-card__content">
                        <table class="govuk-table">
                            <thead class="govuk-table__head">
                            <tr class="govuk-table__row">
                                <th scope="col" class="govuk-table__header">LPA reference number</th>
                                <th scope="col" class="govuk-table__header">Donor</th>
                                <th scope="col" class="govuk-table__header">Action</th>
                            </tr>
                            </thead>
                            <tbody class="govuk-table__body">
                            {% for datum in data %}
                                <tr class="govuk-table__row">
                                    <td class="govuk-table__cell">{{ datum['lpa_ref'] }}</td>
                                    <td class="govuk-table__cell">{{ datum['donor_name'] }}</td>
                                    <td class="govuk-table__cell"><a href="">Remove</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="govuk-button-group">
            <button class="govuk-button">Continue</button>
            <button href="./how-will-donor-confirm" class="govuk-button govuk-button--secondary">Cancel</button>
        </div>
    </form>
</div>
