<div class="moj-identity-bar">
    <div class="moj-identity-bar__container">
        <div class="moj-identity-bar__details">
            <span class="moj-identity-bar__title">Identity Check: <b>{{ details_data.firstName }} {{ details_data.lastName }}</b></span>
        </div>
        <div class="moj-identity-bar__actions">
            <div class="moj-identity-bar__menu">
                <div class="moj-button-menu">
                    <div class="moj-button-menu__wrapper">
                        <a href="#"
                           role="button"
                           draggable="false"
                           class="govuk-button moj-button-menu__item govuk-button--secondary "
                           data-module="govuk-button"
                        >
                            Exit ID Check
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="govuk-width-container">
    <main class="govuk-main-wrapper">
        <h1 class="govuk-heading-xl">Donor LPA check</h1>

        <h3 class="govuk-heading-m">Which LPAs should this identity check apply to?</h3>

        <div class="govuk-form-group">
            <fieldset class="govuk-fieldset" aria-describedby="waste-hint">
                <div class="govuk-summary-card">
                    <div class="govuk-summary-card__title-wrapper">
                        <h2 class="govuk-summary-card__title">
                            LPAs for donor: Mary Chapman
                        </h2>
                    </div>
                    <div class="govuk-summary-card__content">
                        <dl class="govuk-summary-list">
                            <div class="govuk-summary-list__row">
                                {#                                <dd></dd>#}
                                <dt class="govuk-summary-list__key">
                                    LPA reference number
                                </dt>
                                <dt class="govuk-summary-list__key">
                                    Donor
                                </dt>
                                <dt class="govuk-summary-list__key">
                                    Action
                                </dt>
                            </div>
                            {% for datum in data %}
                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        <div class="govuk-checkboxes__item">
                                            <input class="govuk-checkboxes__input" id="lpa_check_{{ datum['lpa_ref'] }}" name="lpa_check" type="checkbox"
                                                   value="{{ datum['lpa_ref'] }}">
                                            <label class="govuk-label govuk-checkboxes__label" for="waste">
                                                {{ datum['lpa_ref'] }}
                                            </label>
                                        </div>
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        {{ datum['donor_name'] }}
                                    </dd>
                                    <dd class="govuk-summary-list__value">
                                        <a href="">Remove</a>
                                    </dd>
                                </div>
                            {% endfor %}
                        </dl>
                    </div>
                </div>
            </fieldset>
        </div>
        <a href="./how-will-donor-confirm"  class="govuk-button">Continue</a>
        <button href="" class="govuk-button govuk-button--secondary">Cancel</button>
    </main>
</div>
