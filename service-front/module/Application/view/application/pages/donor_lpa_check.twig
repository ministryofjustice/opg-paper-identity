{% include 'layout/id_check_banner.twig' with details_data %}
<div class="govuk-width-container">
    <main class="govuk-main-wrapper govuk-!-width-two-thirds">
        <form method="POST">
            <h1 class="govuk-heading-xl">Donor LPA check</h1>

            <h3 class="govuk-heading-m">Which LPAs should this identity check apply to?</h3>

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" aria-describedby="waste-hint">
                    <div class="govuk-summary-card">
                        <div class="govuk-summary-card__title-wrapper">
                            <h2 class="govuk-summary-card__title">
                                LPAs for donor: Mary Chapman
                            </h2>
                        </div>
                        <div class="govuk-summary-card__content">
                            <dl class="govuk-summary-list">
                                <div class="govuk-summary-list__row">
                                    {#                                <dd></dd> #}
                                    <dt class="govuk-summary-list__key govuk-!-width-one-half">
                                        LPA reference number
                                    </dt>
                                    <dt class="govuk-summary-list__key govuk-!-width-one-third">
                                        Donor
                                    </dt>
                                    <dt class="govuk-summary-list__key">
                                        Action
                                    </dt>
                                </div>
                                {% for datum in data %}
                                    <div class="govuk-summary-list__row">
                                        <dd class="govuk-summary-list__value">
                                            <div style="width:400px; display: flex;">
                                                {{ datum['lpa_ref'] }}
                                            </div>
                                        </dd>
                                        <dd class="govuk-summary-list__value">
                                            {{ datum['donor_name'] }}
                                        </dd>
                                        <dd class="govuk-summary-list__value">
                                            <a href="">Remove</a>
                                        </dd>
                                    </div>
                                {% endfor %}
                            </dl>
                        </div>
                    </div>
                </fieldset>
            </div>
            <button class="govuk-button">Continue</button>
            <button href="" class="govuk-button govuk-button--secondary govuk-!-static-margin-left-2">Cancel</button>
        </form>
    </main>
</div>
