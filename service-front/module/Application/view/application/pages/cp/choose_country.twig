{% extends "layout/layout" %}
{% block content %}
    {% include 'layout/id_check_banner.twig' with details_data %}
    <div class="govuk-width-container govuk-!-padding-top-5">
        <form method="POST">
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" role="group" aria-describedby="passport-issued-hint">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-fieldset__heading">
                            {% block title %}
                                Choose country and ID type
                            {% endblock %}
                        </h1>
                    </legend>
                    <div class="govuk-form-group">
                        <div class="govuk-warning-text">
                            <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                            <strong class="govuk-warning-text__text">
                                <span class="govuk-visually-hidden">Warning</span>
                                Note: we do not accept documents from countries not listed.
                            </strong>
                        </div>
                    </div>
                    <h2 class="govuk-heading-m">Choose country</h2>
                    <div id="passport-issued-hint" class="govuk-hint">
                        Start typing or choose from the list
                    </div>
                    {% if form.get('country').messages %}
                        <p id="lpa-error" class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span>
                            {{ form.get('country').messages | join(', ', ' and ') }}
                        </p>
                    {% endif %}
                        <div class="govuk-form-group" id="choose-country">
                            <label class="govuk-label" for="sort">

                            </label>
                            <select class="govuk-select" id="country" name="country">
                                <option value=""></option>
                                {% for item in countries_data %}
                                    <option
                                        value="{{ item }}"
                                        {% if form.get('country').value == item %}selected{% endif %}
                                    >
                                        {{ item }}
                                    </option>
                                {%  endfor %}
                            </select>
                        </div>
                    <h2 class="govuk-heading-m">Choose document</h2>
                    {% if form.get('id_method').messages %}
                        <p id="lpa-error" class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span>
                            {{ form.get('id_method').messages | join(', ', ' and ') }}
                        </p>
                    {% endif %}
                    <div class="govuk-form-group">
                        <div class="govuk-radios" data-module="govuk-radios">
                            {% for key, datum in options_data %}
                                <div class="govuk-radios__item">
                                    <input
                                        class="govuk-radios__input"
                                        id="{{ key }}"
                                        name="id_method"
                                        type="radio"
                                        value="{{ key }}"
                                        {% if form.get('id_method').value == key %}checked{% endif %}
                                    >
                                    <label class="govuk-label govuk-radios__label" for="{{ key }}">{{ datum }}</label>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </fieldset>
            </div>
            <input type="submit" class="govuk-button" value="Continue">
        </form>
    </div>
{% endblock %}


